package com.peter.rogue.inventory;

public class Wearable extends Item{
	public static final Wearable HELMET = new Wearable("Helmet", 5, 17, 3, "at.png", "Head");
	public static final Wearable HAT = new Wearable("Hat", 2, 6, 1, "at.png", "Head");
	public static final Wearable BREAST_PLATE = new Wearable("Breast Plate", 5, 17, 3, "at.png", "Torso");
	public static final Wearable SHOES = new Wearable("Shoes", 2, 6, 1, "at.png", "Feet");
	
	private int defense;
	private String type;
	
	public Wearable(String name, int weight, int value, int defense, String filename, String type) {
		super(name, weight, value, filename);
		this.defense = defense;
		this.type = type;
	}
	
	public int getDefense(){
		return defense;
	}
	public String getType(){
		return type;
	}
}