package com.peter.map;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Texture;

public class Tile{

	private Texture texture;
	public static final Tile GROUND = new Tile("tile.png");
	public static final Tile WALL = new Tile("tile.png");
	
	public Tile(String filename){
		setTexture(new Texture(Gdx.files.internal("map/" + filename)));
	}

	public Texture getTexture() {
		return texture;
	}

	public void setTexture(Texture texture) {
		this.texture = texture;
	}
}
