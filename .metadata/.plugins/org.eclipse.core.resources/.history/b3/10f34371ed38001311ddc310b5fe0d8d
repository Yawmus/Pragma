package com.peter.rogue.items;

import java.util.LinkedList;

import com.badlogic.gdx.graphics.g2d.BitmapFont;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.peter.rogue.Global;

public class Inventory {
	
	private Backpack backpack = new Backpack();
	private LinkedList<Item> items;
	private int weight;
	
	public Inventory(){
		backpack = Backpack.SMALL;
		items = new LinkedList<Item>();
		add(Food.BREAD);
		add(Food.BREAD);
	}
	
	public void add(Item item){
		System.out.println(item.getWeight());
		if(item.getWeight() + weight <= backpack.getCapacity())
			items.add(item);
	}
	public void display(SpriteBatch spriteBatch, BitmapFont font){
		for(int i=0; i<items.size(); i++){
			font.draw(spriteBatch, items.get(i).getName(),  Global.camera.position.x + 80, Global.camera.position.y + i * 15);
		}
	}
}