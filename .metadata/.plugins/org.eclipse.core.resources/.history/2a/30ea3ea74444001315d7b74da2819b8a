package com.peter.rogue.data;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Stack;

import com.peter.rogue.entities.Entity;
import com.peter.rogue.entities.NPC;
import com.peter.rogue.map.Tile;

public class LevelData {
    private int citizens, shopkeeps, monsters;
    private Stack<ArrayList<Entity>> objects;
    private Stack<ArrayList<NPC>> npcs;
    private Stack<String[][]> visible;
    private Stack<String[][]> marker;
    private Stack<Tile[][]> tiles;
    private Stack<HashMap<String, Entity>> database;
    
	public LevelData(){
		
		citizens = 400;
		shopkeeps = 10;
		monsters = 300;
	}
	
	public int getCitizens() {
		return citizens;
	}
	public int getShopkeeps() {
		return shopkeeps;
	}
	public int getMonsters() {
		return monsters;
	}
	public int getNPCTotal() {
		return monsters + citizens + shopkeeps;
	}

	
}
