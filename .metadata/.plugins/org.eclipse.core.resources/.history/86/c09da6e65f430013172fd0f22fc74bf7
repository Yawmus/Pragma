package com.peter.rogue.screens;

import java.util.ArrayList;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Screen;
import com.badlogic.gdx.graphics.FPSLogger;
import com.badlogic.gdx.graphics.GL10;
import com.badlogic.gdx.graphics.GL20;
import com.peter.rogue.Global;
import com.peter.rogue.Rogue;
import com.peter.rogue.entities.Entity;
import com.peter.rogue.entities.EntityManager;
import com.peter.rogue.lighting.Light;
import com.peter.rogue.lighting.Line;
import com.peter.rogue.lighting.Point;
import com.peter.rogue.lighting.Rect;

public class Play implements Screen{

	Rogue game;
	FPSLogger fps;
	
    private EntityManager manager;
    
	private ArrayList<Light> visible_lights;
	private ArrayList<Rect> visible_rects;
	private ArrayList<Line> light_rays;
	private ArrayList<Float> light_angles;
	private Rect rect;
    
	public Play(Rogue game){
		this.game = game;
		fps = new FPSLogger();
	}
	
	@Override
	public void render(float delta) {

		Gdx.gl.glClearColor(0, 0, 0, 1);
		Gdx.gl.glClear(GL20.GL_COLOR_BUFFER_BIT);
		Gdx.gl.glEnable(GL10.GL_BLEND);
	    Gdx.gl.glBlendFunc(GL10.GL_SRC_ALPHA, GL10.GL_ONE_MINUS_SRC_ALPHA);

	    fps.log();
	    
	    Entity.map.setView(Global.camera);
	    Entity.map.getSpriteBatch().begin();
	    
		Entity.map.draw();
		manager.draw();
		
		Entity.map.getSpriteBatch().end();
		
	}

	@Override
	public void resize(int width, int height) {
		Global.camera.viewportWidth = width;
		Global.camera.viewportHeight = height;
	}
	
	@Override
	public void show() {
		manager = new EntityManager();
		manager.init();
		
		visible_lights = new ArrayList<Light>();
		visible_lights.add(new Light(new Point(500,600), 3, 100000, Color.PINK));
		
		visible_rects = new ArrayList<Rect>();
		rect = new Rect(new Point(300f,300f),100,100);
		visible_rects.add(rect);
		visible_rects.add(new Rect(new Point(350f,350f),100,100));
		
		light_rays = new ArrayList<Line>();
		light_angles = new ArrayList<Float>();
		

	}

	@Override
	public void hide() {
	}

	@Override
	public void pause() {
	}

	@Override
	public void resume() {
	}

	@Override
	public void dispose() {
		//renderer.dispose();
		//entityManager.dispose();
	}

}
