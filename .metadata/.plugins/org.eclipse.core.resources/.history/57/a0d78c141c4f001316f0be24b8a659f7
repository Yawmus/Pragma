package com.peter.rogue.inventory;

public class Equipable extends Item{
	public Equipable(String name, int weight, int value, int defense, String filename) {
		super(name, weight, value, filename);
		this.defense = defense;
	}
	private boolean on;
	private int defense;
	
	public int getDefense(){
		return defense;
	}
	public void putOn(){
		on = true;
	}
	public void takeOff(){
		on = false;
	}
	public boolean isOn(){
		return on;
	}
}
