package com.peter.rogue.entities;

import java.util.LinkedList;

import com.peter.rogue.Global;

public class Worm extends Monster{

	public Worm(String filename) {
		super(filename, "Worm");
		
		stats.setLevel(1);
		stats.setHitpoints(10);
		stats.setDexterity(5);
		stats.setStrength(2);
		stats.setExperience(0);

		message = "*Gurgle*";

		list.addType("Citizen");
		list.addType("Shopkeep");
		list.addType("Player");
	}
	
	public void multiply(LinkedList<NPC> npcs){
		npcs.add(new Worm("w.png"));
		npcs.getLast().setPosition(Global.rand(getX()+1, getX()-1), Global.rand(getY()+1, getY()-1));
	}
}
