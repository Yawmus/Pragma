package com.peter.rogue.entities;

import com.peter.rogue.Global;

public class Animate extends Entity{
	protected Stats stats;
	private Response response;
	protected float oldX, oldY;
	protected float wait = 0, messageDelay = 0, delay = 1;
	
	public Animate(String filename, String type) {
		super(filename, type);
		animate = true;
		stats = new Stats();
		response = new Response(type);
	}
	
	@Override
	public void setPosition(float x, float y){
		setX(x * tileWidth);
		setY(y * tileHeight);
		oldX = getX();
		oldY = getY();
	}
	

	public Stats getStats() {
		return stats;
	}

	public void setStats(Stats stats) {
		this.stats = stats;
	}
	
	public String getMessage() {
		return message;
	}
	public void setMessage(String type){
		if(type != "null")
			message = response.call(type);
		
		if(getType() == "worm")
			message = "*Gurgle*";
	}
}

class Response{
	
	private String receiver;
	private int dice;
	
	public Response(String type) {
		this.receiver = type;
	}

	public String call(String caller){
		if(receiver == "Player"){
			dice = Global.randomGenerator(8, 0);
			switch(dice){
			case 0:
				message = "Watch it bitch.";
				break;
			case 1:
				message = "Keep to yourself, bud.";
				break;
			case 2:
				message = "Touch me again and I'll cut you.";
				break;
			case 3:
				message = "Get out of my face!";
				break;
			case 4:
				message = "You're going to regret that.";
				break;
			case 5:
				message = "I'll gut you like a fish.";
				break;
			case 6:
				message = "Back off motherfucker!";
				break;
			case 7:
				message = "Shove it up your ass.";
				break;
			}
		}
			
		return caller;
	}
}
