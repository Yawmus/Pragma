package com.peter.rogue.map;

import java.util.HashMap;
import java.util.LinkedList;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Texture;

public class Tile{
	/*blocked, stairway
	*/
	private Texture texture;
	private boolean blocked;
	private boolean[] properties;
	
	public static final Tile GROUND = new Tile("tile.png", new boolean[]{false, false});
	public static final Tile WALL = new Tile("pound.png", new boolean[]{false, false});
	
	public Tile(String filename, boolean[] properties){
		texture = new Texture(Gdx.files.internal("maps/" + filename));
		this.blocked = blocked;
	}

	public Texture getTexture() {
		return texture;
	}

	public void setTexture(Texture texture) {
		this.texture = texture;
	}
}
