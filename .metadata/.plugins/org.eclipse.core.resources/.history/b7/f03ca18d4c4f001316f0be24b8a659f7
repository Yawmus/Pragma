package com.peter.rogue.inventory;

import java.util.UUID;

import com.badlogic.gdx.graphics.Texture;

public class Item extends Texture{
	private String name;
	private String type;
	private String ID;
	private int weight;
	private int value;
	private String filename;
	private boolean pickedUp;
	
	public Item(String name, int weight, int value, String filename){
		super("img/" + filename);
		this.name = name;
		this.weight = weight;
		this.value = value;
		this.type = "Item";
		this.ID = UUID.randomUUID().toString();
	}
	/*
	public Item(Item item){
		super(item.filename, "Item");
		this.name = item.name;
		this.weight = item.weight;
		this.value = item.value;
		this.filename = item.filename;
	}*/
	
	public void setPosition(float x, float y){

		pickedUp = false;
		map.put(ID, this);
		map.setMark(ID, x * tileWidth, y * tileHeight);
	}
	
	public int getWeight() {
		return weight;
	}
	public int getValue(){
		return value;
	}
	public String getFilename() {
		return filename;
	}
		
	public String getName(){
		return name;
	}

	public void pickedUp(boolean pickedUp){
		this.pickedUp = pickedUp;
	}
	public boolean isPickedUp(){
		return pickedUp;
	}
}