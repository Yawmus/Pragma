package com.peter.map;

import com.peter.rogue.Global;

public class Palette {
	private static short rand;
	
	public static short[] getTint(String tile){
		switch(tile){
		case "WALL":
			return new short[]{70, 70, 70, 100};
		case "GROUND":
			return new short[]{40, 40, 40, 100};
		case "DOOR":
			return new short[]{75, 75, 75, 100};
		case "STAIRS":
			return new short[]{75, 75, 75, 100};
		}
		return null;
	}
	
	public static short[] getRandTint(String tile){
		switch(tile){
		case "WALL":
			rand = (short) Global.rand(10, 70);
			return new short[]{rand, rand, rand, 100};
		case "WATER":
			rand = (short) Global.rand(20, 0);
			return new short[]{0, rand, (short) (70 + rand), 100};
		}
		return null;
	}
	
	public static short[] getRandTint(String tile, boolean alive){
		switch(tile){
		case "GRASS":
			if(alive){
				return new short[]{(short) Global.rand(60, 0), (short) Global.rand(40, 60), (short) Global.rand(20, 0), 100};
			}
			else
				return new short[]{(short) (Global.rand(13, 22)), (short) (Global.rand(11, 13)), 0, 100};
		}
		return null;
	}
}
