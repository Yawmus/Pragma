package com.peter.rogue.entities;

import java.io.IOException;
import java.util.LinkedList;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer.ShapeType;
import com.badlogic.gdx.maps.tiled.renderers.OrthogonalTiledMapRenderer;
import com.badlogic.gdx.math.Vector3;
import com.peter.rogue.Global;
import com.peter.rogue.data.*;
import com.peter.rogue.inventory.Food;
import com.peter.rogue.inventory.Head;
import com.peter.rogue.inventory.Item;
import com.peter.rogue.views.UI;

public class EntityManager {

    private NPC[] npcs;
    private LinkedList<Item> items = new LinkedList<Item>();
    
    private int randX, randY;
    //private Json json;
    private LevelData data;
    private Player player;
    private UI ui;
    private Vector3 pos = new Vector3(Gdx.input.getX(), Gdx.input.getY(), 0);
    
    public EntityManager() throws IOException {
    	data = new LevelData();
    	npcs = new NPC[data.getNPCTotal()];
    }
    
	public void draw(OrthogonalTiledMapRenderer renderer){
		for(int i=0; i<items.size(); i++){
			if(items.get(i).isPickedUp())
				items.remove(i);
			else
				items.get(i).draw(renderer.getSpriteBatch());
		}
		for(int i=0; i<data.getNPCTotal(); i++){
			npcs[i].draw(renderer.getSpriteBatch());
			if(!npcs[i].messageFlag){
				npcs[i].setMessage(Global.inbox.checkMail(npcs[i].getID()));
			}
			Entity.font.draw(renderer.getSpriteBatch(), npcs[i].getMessage(), npcs[i].getX(), npcs[i].getY());
		}
		
		

		player.draw(renderer.getSpriteBatch());
		
		renderer.setView(Global.camera);
		ui.draw(renderer, player, shapeRenderer);
		
		pos = new Vector3(Gdx.input.getX(), Gdx.input.getY(), 0);
		Global.camera.unproject(pos);
		
		if(pos.y + 32 > (Global.camera.position.y - Global.SCREEN_HEIGHT/3 + 12))
			player.setInformation(data.get(player.getMapID(pos.y, pos.x)));
		else
			player.setInformation("null");
		
		Global.camera.project(pos);
		shapeRenderer.begin(ShapeType.Filled);
		shapeRenderer.setColor(0, 0, 0, 1f);
		shapeRenderer.rect(pos.x, pos.y, Entity.font.getBounds(player.getInformation()).width, Entity.font.getLineHeight());
		shapeRenderer.end();
		pos = new Vector3(Gdx.input.getX(), Gdx.input.getY(), 0);
		Global.camera.unproject(pos);
		renderer.getSpriteBatch().begin();
		Entity.font.draw(renderer.getSpriteBatch(), player.getInformation(), pos.x, pos.y + Entity.font.getLineHeight());
    }
    
    public void init(){
    	Entity.initMap();
    	
    	for(int i=0; i<data.getCitizens(); i++){
			randX = Global.randomGenerator(13, 3);
			randY = Global.randomGenerator(7, 3);
			npcs[i] = new NPC("c_.png", "Citizen");
			npcs[i].setPosition(randX, randY);
			npcs[i].setMap((int)npcs[i].getY(), (int)npcs[i].getX(), npcs[i].getEntry());
		}
    	for(int i=data.getCitizens(); i<data.getCitizens() + data.getShopkeeps(); i++){
			randX = Global.randomGenerator(13, 3);
			randY = Global.randomGenerator(7, 3);
			npcs[i] = new Shopkeep("s_.png", "Shopkeep");
			npcs[i].setPosition(randX, randY);
			npcs[i].setMap((int)npcs[i].getY(), (int)npcs[i].getX(), npcs[i].getEntry());
		}
    	for(int i=data.getCitizens() + data.getShopkeeps(); i<data.getNPCTotal(); i++){
			randX = Global.randomGenerator(13, 3);
			randY = Global.randomGenerator(7, 3);
			npcs[i] = new Monster("w.png", "Worm");
			npcs[i].setPosition(randX, randY);
			npcs[i].setMap((int)npcs[i].getY(), (int)npcs[i].getX(), npcs[i].getEntry());
    	}
    	
    	for(int i=0; i<data.getNPCTotal(); i++){
    		Global.inbox.setupMail(npcs[i].getID());
    		data.add(npcs[i].getID(), npcs[i]);
    	}
    	
		player = new Player("at.png", "Player");
		player.setPosition(18, 7);

		items.add(Food.BREAD);
		items.getLast().setPosition(8, 18);
		
		data.add(items.getLast().getID(), items.getLast());
		
		items.add(Head.HAT);
		items.getLast().setPosition(9, 18);
		
		data.add(items.getLast().getID(), items.getLast());

		Global.inbox.setupMail(player.getID());
		data.add(player.getID(), player);
		
		Gdx.input.setInputProcessor(player);
		ui = new UI();
	}
    
    public void dispose(){
		for(int i=0; i<data.getNPCTotal(); i++)
			npcs[i].getTexture().dispose();
		player.getTexture().dispose();
		ui.dispose();
		shapeRenderer.dispose();
    }
}
